<core:View xmlns:core="sap.ui.core" xmlns:mvc="sap.ui.core.mvc" xmlns="sap.m"
		xmlns:form="sap.ui.layout.form"
		controllerName="zdb01.Company" xmlns:html="http://www.w3.org/1999/xhtml">
	<Page title="Title">
		<content>
	         <form:SimpleForm>
	            <form:title>
	                <core:Title text="Company Details"/>
	            </form:title>
	            
	            <form:content>
	                <Label text="NAME"/>
	                <Text text="{/company/name}"/>
	                <Label text="CITY"/>
	                <Text  text="{/company/address}"/>
	            </form:content>   
	       </form:SimpleForm>
		</content>
	</Page>
</core:View>